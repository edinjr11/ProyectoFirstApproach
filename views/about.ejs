<%- include('partials/header'); -%>

<h1>Image Resizer</h1>

<h2>Upload Photos</h2>
<form id="upload-form" action="/about" method="post" enctype="multipart/form-data">
  <h2>Select an image to upload:</h2>
  <div class="upload-container"><input id="file-picker" type="file" name="image"></div>
  <div><input type="submit" value="Upload Image"></div>
</form>

<p id="message"></p>
<hr>

<script>
    document.addEventListener('DOMContentLoaded', () => {
  
      const message = document.getElementById('message');
      const picker = document.getElementById('file-picker');
  
      document.getElementById('upload-form').addEventListener('submit', (e) => {
  
        message.innerHTML = '';
  
        if(!picker.files.length) {
          message.innerHTML = 'Please select an image to upload.';
          alert('Please select an image to upload.');
          e.preventDefault();
          return false;
        }
      });
  
    });
  </script>

